<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.gph.saviorframework.common.model">
	<class name="Role" table="SF_ROLE" dynamic-update="true" dynamic-insert="true">
		<comment>角色表</comment>
		<id name="id" unsaved-value="null" length="50">
			<column name="ROLE_ID">
				<comment>角色主健</comment>
			</column>
		</id>
		<version name="version" type="integer">
			<column name="ROLE_VERSION">
				<comment>角色数据版本</comment>
			</column>
		</version>
		<property name="name">
			<column name="ROLE_NAME" length="100">
				<comment>角色名称</comment>
			</column>
		</property>
		<property name="type">
			<column name="ROLE_TYPE" length="50">
				<comment>角色类型</comment>
			</column>
		</property>
		<property name="description">
			<column name="ROLE_DESCRIPTION" length="1000">
				<comment>角色描述</comment>
			</column>
		</property>
		<property name="order" type="integer">
			<column name="ROLE_ORDER">
				<comment>角色排序</comment>
			</column>
		</property>
		<set name="menus" table="SF_ROLE_MENU">
			<key column="ROLE_ID" />
			<many-to-many class="Menu">
				<column name="MENU_ID">
					<comment>菜单ID</comment>
				</column>
			</many-to-many>
		</set>
		<set name="users" table="SF_ROLE_USER">
			<key column="ROLE_ID" />
			<many-to-many class="User">
				<column name="USER_ID">
					<comment>用户ID</comment>
				</column>
			</many-to-many>
		</set>
		<set name="functions" table="SF_ROLE_FUNCTION">
			<key column="ROLE_ID" />
			<many-to-many class="Function">
				<column name="FUNCTION_ID">
					<comment>功能ID</comment>
				</column>
			</many-to-many>
		</set>
		<set name="permissions" table="SF_ROLE_PERMISSION" lazy="false">
			<key column="ROLE_ID" />
			<many-to-many class="Permission">
				<column name="PERMISSION_ID">
					<comment>权限ID</comment>
				</column>
			</many-to-many>
		</set>
		<set name="positions" table="SF_ROLE_POSITION">
			<key column="ROLE_ID" />
			<many-to-many class="Position">
				<column name="POSITION_ID">
					<comment>岗位ID</comment>
				</column>
			</many-to-many>
		</set>
		<many-to-one name="creator" class="User" fetch="join" update="false">
			<column name="ROLE_CREATOR">
				<comment>角色创建者</comment>
			</column>
		</many-to-one>
		<property name="created" type="date" update="false">
			<column name="ROLE_CREATED">
				<comment>角色创建时间</comment>
			</column>
		</property>
		<many-to-one name="modifier" class="User" fetch="join">
			<column name="ROLE_MODIFIER">
				<comment>角色修改者</comment>
			</column>
		</many-to-one>
		<property name="modified" type="date">
			<column name="ROLE_MODIFIED">
				<comment>角色修改时间</comment>
			</column>
		</property>
	</class>
</hibernate-mapping>